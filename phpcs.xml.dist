<?xml version="1.0"?>
<ruleset
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd"
    name="Custom">

    <arg
        name="extensions"
        value="php/PHP" />

    <rule ref="PSR2" />

    <file>./src/</file>
    <exclude-pattern>./src/*/vendor/</exclude-pattern>
    <exclude-pattern>./src/*/*/vendor/</exclude-pattern>
</ruleset>
